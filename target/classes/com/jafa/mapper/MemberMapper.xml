<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jafa.mapper.MemberMapper">
	<resultMap type="com.jafa.model.MemberVO" id="memberMap">
		<id property="userId" column="userId" />
		<result property="userId" column="userId" />
		<result property="userPw" column="userPw" />
		<result property="userName" column="userName" />
		<result property="email" column="email" />
		<result property="address" column="address" />
		<result property="enabled" column="enabled" />
		<result property="regDate" column="regDate" />
		<result property="updateDate" column="updateDate" />
		<collection property="authList" resultMap="authMap">
		</collection>
	</resultMap>
	<resultMap type="com.jafa.model.AuthVO" id="authMap">
		<result property="userId" column="userId" />
		<result property="auth" column="auth" />
	</resultMap>

	<!-- 회원 정보 화면에 불러오기-->
	<select id="getList" resultType="com.jafa.model.MemberVO">
    select * from member_tbl  	
  	</select>
  	
	<!-- 회원 조회 -->
	<select id="read" resultMap="memberMap">
		select * from member_tbl M
		inner join
		member_auth as A
		on M.userid = A.userid
		where M.userId = #{userId};
	</select>
	
	<!-- 회원가입 -->
	<insert id="memberInsert">
		insert into member_tbl(userId,userPw,userName,email,address)
		values (#{userId},#{userPw},#{userName},#{email},#{address}); 
	</insert>
	
	<!-- 회원권한설정 -->
	<insert id="authInsert"> 
		insert into member_auth
		values (#{userId}, #{auth});
	</insert>
	
	<!-- 회원정보 수정 -->
	<update id="update">
		update member_tbl
		set
		userId = #{userId},
		userPw = #{userPw},
		userName = #{userName}, 
		email = #{email},
		address = #{address}
		updateDate = now()
		where id = #{id};	
	</update>  
	
</mapper> 